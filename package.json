{
  "name": "news_site_api",
  "version": "1.0.0",
  "description": "REST api to mimic a news site's requests",
  "main": "listen.js",
  "scripts": {
    "setup-dbs": "psql -f ./db/setup.sql",
    "seed": "node ./db/seeds/run-seed.js",
    "test": "jest",
    "dev": "npm run seed && nodemon listen.js",
    "seed:prod": "NODE_ENV=production DATABASE_URL=$(heroku config:get DATABASE_URL) npm run seed",
    "start": "node listen.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JohnPBarrett/news_site_api.git"
  },
  "keywords": [],
  "author": "John Barrett",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JohnPBarrett/news_site_api/issues"
  },
  "homepage": "https://github.com/JohnPBarrett/news_site_api#readme",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^14.1.0",
    "express": "^4.17.2",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.7.1",
    "pg-format": "^1.0.4"
  },
  "devDependencies": {
    "jest": "^27.4.7",
    "jest-sorted": "^1.0.14",
    "nodemon": "^2.0.15",
    "supertest": "^6.2.1"
  },
  "engines": {
    "node": "17.x",
    "npm": "8.x"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "jest-sorted"
